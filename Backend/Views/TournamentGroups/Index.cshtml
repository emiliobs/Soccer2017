@model IEnumerable<Domains.TournamentGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Tournament Groups</h2>

<p>
    @Html.ActionLink("Create New", "Create",new{}, new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tournament.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tournament.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TournamentGroupId }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Details", "Details", new { id=item.TournamentGroupId }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.TournamentGroupId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
