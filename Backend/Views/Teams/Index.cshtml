@model IEnumerable<Domains.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Teams.</h2>

<p>
    @Html.ActionLink("Create New", "Create", new{}, new{@class="btn btn-success"} )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.League.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Initials)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.League.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Logo))
            {
                <img src="@Url.Content(item.Logo)" alt="Logo" style="width: 100px; height:100px; max-width: 100%; max-height: auto;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Initials)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TeamId }, new{@class = "btn btn-info"}) 
            @Html.ActionLink("Details", "Details", new { id=item.TeamId }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.TeamId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
